<configuration xmlns="http://logging.apache.org/log4php/">
    <appender name="default" class="LoggerAppenderRollingFile">
        <layout class="LoggerLayoutPattern" >
            <param name="conversionPattern" value="%d [%-5p] %c - %m%n%ex" />
        </layout>
        <param name="file" value="/tmp/spiderLog.log" />
        <param name="maxFileSize" value="100MB" />
        <param name="maxBackupIndex" value="12" />
        <param name="compress" value="true" />

    </appender>

    <root>
        <level value="debug" />
        <appender_ref ref="default" />
    </root>
</configuration>


